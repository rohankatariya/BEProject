
@{
    Layout = null;
}
@model Project.Models.items
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <link href="~/house.css" rel="stylesheet" />

    <style type="text/css">
        #aboutnav {
            padding-left: 15px;
            padding-top: 10px;
            height: auto;
            background-image: url();
            background-image: url('../../img/home.jpg');
            background-position: center center;
            background-attachment: fixed;
            background-size: cover;
            min-width: 1240px;
            min-height: 100px;
            width: auto;
            color: white;
        }
    </style>
    <title>AboutCategory</title>
</head>
<body>
    <div class="row">
        <nav class="navbar-inverse navbar-fixed-top" style="opacity:0.8;">
            <div class="col-sm-12 btn-group">
                <h4>
                    <b><i id="i1" style="color:white">MOB Recommender</i></b><span style="color:white" class="glyphicon glyphicon-home"></span>
                    <a href="@Url.Action("LogIn","Home")"><input value="Home" id="b2" class="btn"></a>
                    <a href="@Url.Action("Serv","Home")"><input value="Services" id="b2" class="btn"></a>
                    <a href="@Url.Action("Abts","Home")"><input value="About Us" id="b3" class="btn"></a>
                    <a href="@Url.Action("cont","Home")"><input value="Contact us " id="b4" class="btn"></a>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span style="color:white;" class="glyphicon glyphicon-user"><b>@Session["User"]</b></span>
                    <a href="@Url.Action("LogIn","Home")">Log Out</a>
                </h4>
            </div>
        </nav>
        </div>
         <div class="row f3" style="margin-top:130px;">
            <div class="col-sm-2" style="height:300px;width:220px;margin-left:20px;">
                <img src="@ViewBag.item1" id="id1" style="height:250px;width:220px" /><br />               
            </div>
            <div class="col-sm-2" style="height:300px;width:220px;margin-left:20px;">
                <img src="@ViewBag.item2" id="id1" style="height:250px;width:220px" /><br />
            </div>
            <div class="col-sm-2" style="height:300px;width:220px;margin-left:20px;">
                <img src="@ViewBag.item3" id="id1" style="height:250px;width:220px" /><br />
            </div>
            <div class="col-sm-2" style="height:300px;width:220px;margin-left:20px;">
                <img src="@ViewBag.item4" id="id1" style="height:250px;width:220px;" /><br />
            </div>
            <div class="col-sm-2" style="height:300px;width:220px;margin-left:20px;">
                <img src="@ViewBag.item5" id="id1" style="height:250px;width:220px;" /><br />
            </div>
        </div>
    <div class="row">
        <div class="col-lg-12" style="margin-bottom:10px;">
           
            @ViewBag.Category Name:@ViewBag.name1<br />
            @ViewBag.Category Approx Cost:@ViewBag.price1<br />
            @ViewBag.Category Capacity:@ViewBag.capacity<br />
            @ViewBag.Category Details:@ViewBag.details<br />
            Address:@ViewBag.addr
            @if (null != ViewBag.butt)
            {
                @Html.Label("Approx Cost Of The product is for 300 plates.Details:")
                <form action="@Url.Action("About","Home")">
                    @Html.Label("Menu(Approx cost):")<br />
                    @Html.Label("Sweet Dish:Rs ")@ViewBag.SwPrize<br />
                    @Html.Label("Starter Dish:Rs ")@ViewBag.StPrize<br />
                    @Html.Label("MainCoarse Dish(2 Vegetales and 2 roties) and Rice:Rs ")@ViewBag.MCPrize<br />
                    @Html.Label("Dessert Dish:Rs ")@ViewBag.DPrize<br />
                    </form>
            }
        </div>
    </div>
    <div class="row">
        <form action="@Url.Action("Payment","Home")">
            <button class="button">Book</button>
        </form>
    </div>
        <div class="row">
            <div class="col-sm-12" id="f5">
                Copy right reserved
            </div>
        </div>

</body>
</html>