
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <link href="~/house.css" rel="stylesheet" />

    <style type="text/css">
        #aboutnav {
            padding-left: 15px;
            padding-top: 10px;
            height: auto;
            background-image: url();
            background-image: url('../../img/home.jpg');
            background-position: center center;
            background-attachment: fixed;
            background-size: cover;
            min-width: 1240px;
            min-height: 100px;
            width: auto;
            color: white;
        }
    </style>
    <title>AboutCategory</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="navbar-inverse navbar-fixed-top" style="opacity:0.8;">
                <div class="col-sm-12 btn-group">
                    <h4>
                        <b><i id="i1" style="color:white">MOB Recommender</i></b><span style="color:white" class="glyphicon glyphicon-home"></span>
                        <input value="Home" id="b1" class="btn">
                        <input value="Services" id="b2" class="btn">
                        <input value="About Us" id="b3" class="btn">
                        <input value="Contact us " id="b4" class="btn">
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span style="color:white;" class="glyphicon glyphicon-user"><b>@ViewBag.User</b></span>
                </h4>
            </div>
        </nav>
    </div>
    <div class="row f3" style="margin-top:130px;margin-left:10px;">
        @foreach (var item in ViewBag.prodlist)
        {
            <div class="col-sm-2" style="height:180px;width:140px;margin-right:20px;">
                <img src="@ViewBag.item1" id="id1" style="height:180px;width:150px" /><br />
            </div>
            <div class="col-sm-10" style="padding-top:55px;padding-left:30px;">
                @ViewBag.Category Name:@ViewBag.name1<br />
                @ViewBag.Category Price:@ViewBag.price1<br />
                @ViewBag.Category Capacity:@ViewBag.capacity<br />
            </div>
        }
    </div>
</div>

</body>
</html>
